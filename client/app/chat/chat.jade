div#chatDiv(style='height: 600px; overflow: auto;')
  ul(ng-repeat='message in allMessages | filter: {classroomId: classroomId}', ng-init='scroll()')
      | {{message.user}} ({{message.date | date:'HH:mm:ss' }}) :
      | {{message.content}}
form.message-form
  p.input-group
    input.form-control(type='text', placeholder='Enter your message here.', ng-model='newMessage')
    span.input-group-btn
      button.btn.btn-primary(type='submit', ng-click='addMessage()') Send