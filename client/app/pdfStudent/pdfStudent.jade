.container-fluid
  div.row
    div.well.col-md-9
      center
        div.col-md-2
        div.col-md-8
          a.btn.btn-default.btn-sm#prev(ng-hide='sync') < Previous
          &nbsp;
          a.btn.btn-default.btn-sm#next(ng-hide='sync') Next >
          &nbsp;
          span
            | Page:&nbsp;
            span#page_num
            | &nbsp;/&nbsp;
            span#page_count
            &nbsp;
            input(type='checkbox', ng-model='sync', ng-change='syncUnsync()')
            | Sync
          &nbsp;
          a.btn.btn-default.btn-sm#fullscreen(ng-hide='sync') Full Screen   
        div.col-md-2
          center
            a.btn.btn-primary.btn-default(href='/', role='button', style='background:#6666CC') Leave Classroom
      br
      center
        canvas#slides
      br
      center
        a.btn.btn-danger.btn-sm(ng-click='addFeedback(1);') Too fast
        &emsp;
        a.btn.btn-success.btn-sm(ng-click='addFeedback(2);') Good
        &emsp;
        a.btn.btn-warning.btn-sm(ng-click='addFeedback(3);') Too slow
        br
        span#tooQuick 0
        | &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
        span#perfect 0
        | &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
        span#tooSlow 0
